@using Microsoft.AspNetCore.Authorization
@inject IAuthorizationService authorizationService

@{
    var result = await authorizationService.AuthorizeAsync(this.User, "ViewManageMenu");
}

@if (result.Succeeded)
{
    <head>
        <script src="https://code.jquery.com/jquery-3.2.1.min.js"></script>
        <link rel="stylesheet" href="https://maxcdn.bootstrapcdn.com/bootstrap/4.0.0/css/bootstrap.min.css">
    </head>
    <body>
        <script src="https://code.jquery.com/jquery-3.2.1.slim.min.js"></script>
        <script src="https://cdnjs.cloudflare.com/ajax/libs/popper.js/1.12.9/umd/popper.min.js"></script>
        <script src="https://maxcdn.bootstrapcdn.com/bootstrap/4.0.0/js/bootstrap.min.js"></script>
        <div class="dropdown">
            <a class="btn btn-outline-danger dropdown-toggle" href="#"
               id="managedropdownmenu" data-toggle="dropdown">
                Manage
            </a>
            <div class="dropdown-menu" aria-labelledby="managedropdownmenu">
                <a class="dropdown-item" asp-action="Index" asp-controller="Contact" asp-area="Contact">
                    Quản lí liên hệ
                </a>
                <a class="dropdown-item" asp-action="Index" asp-controller="Role" asp-area="Identity">
                    Quản lí role (vai trò)
                </a>
                <a class="dropdown-item" asp-action="Index" asp-controller="User" asp-area="Identity">
                    Quản lí thành viên
                </a>
            </div>
        </div>
    </body>
}

